<UserControl x:Class="Fluxtreme.FluxEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:scintilla="clr-namespace:ScintillaNET;assembly=Scintilla.NET"
             xmlns:local="clr-namespace:Fluxtreme"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<WindowsFormsHost>
		<scintilla:Scintilla x:Name="editor" BorderStyle="None" BackspaceUnindents="True" CaretWidth="2" IdleStyling="None"></scintilla:Scintilla>
	</WindowsFormsHost>
</UserControl>

<UserControl x:Class="Fluxtreme.TableGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fluxtreme"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" Height="100">
	<DockPanel Margin="2, 2, 2, 10">
		<Grid Height="22" DockPanel.Dock="Top" Background="#FF424242">
			<TextBlock x:Name="tablename" Margin="5,0,0,0" VerticalAlignment="Center" Opacity="0.5"/>
		</Grid>
		<DataGrid x:Name="tablecontents" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeRows="False" CanUserSortColumns="False" AreRowDetailsFrozen="True" IsReadOnly="True" AutoGeneratingColumn="AutoGeneratingColumn">
			<DataGrid.CellStyle>
				<Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
					<Setter Property="Padding" Value="10,10,10,10"/>
					<Setter Property="VerticalContentAlignment" Value="Center"/>
				</Style>
			</DataGrid.CellStyle>
		</DataGrid>
	</DockPanel>
</UserControl>
